{% extends "base.twig" %}

{% block content %}
<section id="videos">
  <div class="row">
    <div class="large-8 columns">
      {% for video in videos | slice(0,1) %}
      <div class="flex-video">
        {{video.get_field('link_video')}}
      </div>
      {% endfor %}
    </div>

    <div class="large-4 columns">
      <ul class="video-gallery">
        {% for video in videos | slice(1,2) %}
        <li>
          <div class="flex-video">
            {{video.get_field('link_video')}}
          </div>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">

      <ul class="small-block-grid-3">
        {% for video in videos [3:] %}
        <li>
          <div class="flex-video">
            {{video.get_field('link_video')}}
          </div>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>
{% endblock %}
